@using ElectronicDiaryWeb.Models.Auth
<!-- RegisterParentWithChildren.cshtml -->
@model RegisterParentWithChildrenModel

<h2>Регистрация родителя с детьми</h2>

<form id="parentForm">
    <div class="row">
        <div class="col-md-6">
            <h4>Данные родителя</h4>
            <div class="form-group">
                <label asp-for="Login"></label>
                <input asp-for="Login" class="form-control" required />
                <span asp-validation-for="Login" class="text-danger"></span>
            </div>

            <!-- Остальные поля родителя -->

        </div>

        <div class="col-md-6">
            <h4>Дети</h4>
            <div id="childrenContainer">
                <div class="child-form card mb-3">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Логин ребенка</label>
                            <input name="Children[0].Login" class="form-control" required />
                        </div>
                        <!-- Остальные поля ребенка -->
                        <button type="button" class="btn btn-danger btn-sm mt-2 remove-child">Удалить</button>
                    </div>
                </div>
            </div>

            <button type="button" id="addChild" class="btn btn-secondary">Добавить ребенка</button>
        </div>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Зарегистрировать</button>
</form>

@section Scripts {
    <script>
        let childIndex = 1;

        $('#addChild').click(function() {
            const html = `
                <div class="child-form card mb-3">
                    <div class="card-body">
                        <div class="form-group">
                            <label>Логин ребенка</label>
                            <input name="Children[${childIndex}].Login" class="form-control" required />
                        </div>
                        <!-- Остальные поля -->
                        <button type="button" class="btn btn-danger btn-sm mt-2 remove-child">Удалить</button>
                    </div>
                </div>
            `;
            $('#childrenContainer').append(html);
            childIndex++;
        });

        $(document).on('click', '.remove-child', function() {
            $(this).closest('.child-form').remove();
        });

        $('#parentForm').submit(async function(e) {
            e.preventDefault();

            const formData = {
                ...getFormData($(this)),
                Children: []
            };

            $('.child-form').each(function(index) {
                formData.Children.push(getFormData($(this)));
            });

            try {
                const response = await fetch('/api/users/register-parent-with-children', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                        'Authorization': `Bearer ${getCookie('accessToken')}`
                    },
                    body: JSON.stringify(formData)
                });

                if (response.ok) {
                    window.location.href = '/Home/Index';
                } else {
                    alert('Ошибка при регистрации: ' + await response.text());
                }
            } catch (error) {
                console.error(error);
                alert('Произошла ошибка');
            }
        });

        function getFormData(form) {
            const data = {};
            form.find('input, select').each(function() {
                const name = $(this).attr('name');
                if (name) {
                    data[name.split('.').pop()] = $(this).val();
                }
            });
            return data;
        }

        function getCookie(name) {
            const value = `; ${document.cookie}`;
            const parts = value.split(`; ${name}=`);
            if (parts.length === 2) return parts.pop().split(';').shift();
        }
    </script>
}