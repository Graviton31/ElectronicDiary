@using ElectronicDiaryApi.ModelsDto
@model IEnumerable<SubjectListItemDto>

@{
    ViewData["Title"] = "Список предметов";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>@ViewData["Title"]</h2>
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Добавить предмет
        </a>
    </div>

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-danger">
            @ViewBag.ErrorMessage
        </div>
    }

    <table class="table table-striped table-hover">
        <thead>
            <tr class="table-dark">
                <th>Название</th>
                <th>Полное название</th>
                <th>Количество групп</th>
                <th>Количество преподавателей</th>
                <th>Действия</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var subject in Model)
            {
                <tr>
                    <td>@subject.Name</td>
                    <td>@subject.FullName</td>
                    <td>@subject.GroupsCount</td>
                    <td>@subject.TeachersCount</td>
                    <td>
                        <a asp-controller="Subjects" asp-action="Details" asp-route-id="@subject.IdSubject" class="btn btn-info btn-sm"> Подробнее </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .table {
        margin-top: 20px;
        box-shadow: 0 0 10px rgba(0,0,0,0.1);
        width: 100%;
    }

        .table thead th {
            background-color: #343a40;
            color: white;
            border-bottom: 2px solid #dee2e6;
            padding: 12px 15px;
        }

        .table tbody td {
            vertical-align: middle;
            padding: 12px 15px;
        }

    .alert {
        margin-top: 20px;
    }
</style>