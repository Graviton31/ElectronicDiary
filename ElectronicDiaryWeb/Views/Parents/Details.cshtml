@model ElectronicDiaryApi.ModelsDto.ParentDto
@{
    ViewData["Title"] = "Профиль родителя";
}

<div class="container mt-4">
    <h1 class="mb-4">@Model.FullName</h1>

    <!-- Основная информация -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Основная информация</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Телефон:</dt>
                <dd class="col-sm-9">@(Model.Phone ?? "не указан")</dd>

                <dt class="col-sm-3">Логин:</dt>
                <dd class="col-sm-9">@Model.Login</dd>
            </dl>
        </div>
    </div>

    <!-- Дети -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Дети</h5>
        </div>
        <div class="card-body">
            @if (Model.Students.Any())
            {
                <div class="row">
                    @foreach (var student in Model.Students)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-body">
                                    <h5 class="card-title">@student.FullName</h5>
                                    <dl class="row mb-0">
                                        <dt class="col-sm-5">Телефон:</dt>
                                        <dd class="col-sm-7">@(student.Phone ?? "не указан")</dd>
                                    </dl>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning">
                    Не указаны
                </div>
            }
        </div>
    </div>

    <!-- Заявки на зачисление -->
    @if (Model.EnrollmentRequests.Any())
    {
        <div class="card mb-4">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Заявки на зачисление</h5>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th>№</th>
                                <th>Дата подачи</th>
                                <th>Статус</th>
                                <th>Студент</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var request in Model.EnrollmentRequests)
                            {
                                <tr>
                                    <td>@request.IdRequest</td>
                                    <td>@request.RequestDate.ToString("dd.MM.yyyy")</td>
                                    <td>
                                        <span class="badge
                                            @(request.Status == "Approved" ? "bg-success" :
                                             request.Status == "Pending" ? "bg-warning" :
                                             "bg-danger")">
                                            @request.Status
                                        </span>
                                    </td>
                                    <td>@request.StudentFullName</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }

    <div class="mb-4">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            ← Назад к списку сотрудников
        </a>
    </div>
</div>