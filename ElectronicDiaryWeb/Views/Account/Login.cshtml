@{
    Layout = null;
}
@using ElectronicDiaryWeb.Models.Auth
@model LoginModel

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Вход в систему - ElectronicDiary</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="/_content/BootstrapBlazor.BootstrapIcon/css/bootstrap-icons.min.css">
    <style>
        body {
            background-color: #f8f9fa;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            margin: 0;
        }

        .login-container {
            background: white;
            border-radius: 12px;
            box-shadow: 0 8px 24px rgba(0, 0, 0, 0.08);
            padding: 2.5rem;
            width: 100%;
            max-width: 450px;
            margin: 20px;
        }

        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }

        .login-title {
            color: #2b2d42;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .login-subtitle {
            color: #8d99ae;
            font-size: 0.9rem;
        }

        .form-group {
            margin-bottom: 1.5rem;
        }

        .form-control {
            padding: 12px 15px;
            border-radius: 12px;
            border: 1px solid #dee2e6;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

            .form-control:focus {
                border-color: #4361ee;
                box-shadow: 0 0 0 0.2rem rgba(67, 97, 238, 0.25);
            }

        .btn-login {
            width: 100%;
            padding: 12px;
            font-weight: 600;
            background-color: #4361ee;
            border: none;
            border-radius: 12px;
            transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
        }

            .btn-login:hover {
                background-color: #3f37c9;
                transform: translateY(-2px);
            }

        .validation-summary-errors ul {
            list-style: none;
            padding-left: 0;
            margin-bottom: 1.5rem;
        }

        .validation-summary-errors li {
            color: #dc3545;
            font-size: 0.9rem;
        }

        .field-validation-error {
            font-size: 0.85rem;
            color: #dc3545;
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <div class="icon-wrapper mx-auto mb-3" style="background: linear-gradient(135deg, #4361ee, #3f37c9); width: 56px; height: 56px; border-radius: 50%; display: flex; align-items: center; justify-content: center; box-shadow: 0 4px 12px rgba(67, 97, 238, 0.3);">
                <i class="bi bi-person-circle" style="font-size: 1.8rem; color: white;"></i>
            </div>
            <h2 class="login-title">Вход в систему</h2>
            <p class="login-subtitle">Введите свои учетные данные</p>
        </div>

        <form asp-action="Login" method="post">
            <div asp-validation-summary="ModelOnly" class="validation-summary-errors"></div>

            <div class="form-group">
                <label asp-for="Login" class="form-label">Логин</label>
                <input asp-for="Login" class="form-control" placeholder="Введите ваш логин" />
                <span asp-validation-for="Login" class="field-validation-error"></span>
            </div>

            <div class="form-group">
                <label asp-for="Password" class="form-label">Пароль</label>
                <input asp-for="Password" type="password" class="form-control" placeholder="Введите ваш пароль" />
                <span asp-validation-for="Password" class="field-validation-error"></span>
            </div>

            <button type="submit" class="btn btn-primary btn-login mt-3">
                <i class="bi bi-box-arrow-in-right me-2"></i>Войти
            </button>
        </form>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>
</body>
</html>