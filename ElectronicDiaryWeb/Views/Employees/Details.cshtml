@model ElectronicDiaryApi.ModelsDto.EmployeeDto
@{
    ViewData["Title"] = "Профиль сотрудника";
}

<div class="container mt-4">
    <h1 class="mb-4">@Model.FullName</h1>

    <!-- Основная информация -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Основная информация</h5>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3">Дата рождения:</dt>
                <dd class="col-sm-9">@Model.BirthDate</dd>

                <dt class="col-sm-3">Должность:</dt>
                <dd class="col-sm-9">@Model.Post</dd>

                <dt class="col-sm-3">Логин:</dt>
                <dd class="col-sm-9">@Model.Login</dd>

                <dt class="col-sm-3">Роль:</dt>
                <dd class="col-sm-9">@Model.Role</dd>

                <dt class="col-sm-3"><i class="fas fa-phone"></i> Телефон:</dt>
                <dd class="col-sm-9">@(Model.Phone ?? "не указан")</dd>
            </dl>
        </div>
    </div>

    <!-- Предметы и группы -->
    <div class="card mb-4">
        <div class="card-header bg-primary text-white">
            <h5 class="mb-0">Преподаваемые предметы</h5>
        </div>
        <div class="card-body">
            @if (Model.Subjects.Any())
            {
                <div class="row">
                    @foreach (var subject in Model.Subjects)
                    {
                        <div class="col-md-6 mb-3">
                            <div class="card">
                                <div class="card-header bg-light">
                                    <h5 class="mb-0">@subject.Name</h5>
                                </div>
                                <div class="card-body">
                                    @if (subject.Groups.Any())
                                    {
                                        <div class="row">
                                            @foreach (var group in subject.Groups)
                                            {
                                                <div class="col-12 mb-2">
                                                    <div class="d-flex justify-content-between align-items-center">
                                                        <div>
                                                            <span class="fw-bold">@group.Name</span>
                                                            <br>
                                                            <small class="text-muted">
                                                                <i class="fas fa-door-open"></i> @group.Classroom
                                                            </small>
                                                        </div>
                                                    </div>
                                                </div>
                                            }
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="alert alert-info mb-0">
                                            Нет назначенных групп
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }
                </div>
            }
            else
            {
                <div class="alert alert-warning mb-0">
                    Сотрудник не ведет ни одного предмета
                </div>
            }
        </div>
    </div>

    <div class="mb-4">
        <a href="javascript:history.back()" class="btn btn-outline-secondary">
            ← Назад к списку сотрудников
        </a>
    </div>
</div>